@model DogSite.Models.ArticleViewModel


<div class="jumbotron">
    @if (Model != null)
    {
        <h1 id="title">@Model.Title</h1>
        <p id="body" class="preline">@Model.Body</p>
        <p class="lead">@Model.Attribution</p>
    }
</div>

<input id="previousArticleButton" class="btn btn-primary" type="button" value="Previous" onclick="GetPreviousArticle()" />
<input id="nextArticleButton" class="btn btn-primary" type="button" value="Next" onclick="GetNextArticle()" />

<script>
    function GetPreviousArticle() {
        $.ajax({
            url: '@Url.Action("GetArticle", "Test",new { Id = Model.Id - 1 })',
            method: 'GET',
            success: function (data) {
                $("#currentArticle").html(data)
            }
        });
    }

    function GetNextArticle() {
        $.ajax({
            url: '@Url.Action("GetArticle", "Test",new { Id = Model.Id+1 })',
            method: 'GET',
            success: function (data) {
                $("#currentArticle").html(data)
            }
        });
    }
</script>
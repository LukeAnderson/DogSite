@model DogSite.Models.ArticleViewModel


<div class="jumbotron">
    @if (Model != null)
    {
        <h1 id="title">@Model.Title</h1>
        <p id="body" class="preline">@Model.Body</p>
        <p class="lead">@Model.Attribution</p>
    }
</div>

<input id="previousArticleButton" class="btn btn-primary" type="button" value="Previous" onclick="GetNextArticle()" />

<script>
    function GetNextArticle() {
        if (document.readyState === 'interactive' | document.readyState === 'complete') {

            $.ajax({
                url: '@Url.Action("GetArticle", "Test",new { Id = Model.Id+1 })',
                method: 'GET',
                success: function (data) {

                    $("#partial").html(data)
                }
            });
        }
    }
</script>